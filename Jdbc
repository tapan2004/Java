package Java.JDBC;
import javax.swing.*;
import java.io.File;
import java.io.FileInputStream;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class InsertingLargeImage {
    private static Connection connection;

    public static Connection getConnection() throws Exception {
        if (connection == null || connection.isClosed()) {
            Class.forName("com.mysql.cj.jdbc.Driver");
            connection = DriverManager.getConnection(
                    "jdbc:mysql://localhost:3306/student",
                    "root",
                    "Tmanna"
            );
        }
        return connection;
    }
    public static void main(String[] args) {
        Connection connection1 = null;
        PreparedStatement preparedStatement = null;
        FileInputStream fileInputStream = null;
        try {
            connection1 = getConnection();
            String query = "insert into images(pic) values(?)";
            preparedStatement = connection.prepareStatement(query);

            // to choose the images
            JFileChooser jFileChooser = new JFileChooser();
            int result=jFileChooser.showOpenDialog(null);

            if(result==JFileChooser.APPROVE_OPTION) {
                File file = jFileChooser.getSelectedFile();
                fileInputStream = new FileInputStream(file);

                preparedStatement.setBinaryStream(1, fileInputStream, fileInputStream.available());
                int row = preparedStatement.executeUpdate();
                //System.out.println("Done...");
                if (row > 0) {
                    JOptionPane.showMessageDialog(null, "Image upload successfully");
                } else {
                    JOptionPane.showMessageDialog(null, "Fail to upload image!");
                }
            }

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (fileInputStream != null)
                    fileInputStream.close();
                if (preparedStatement != null)
                    preparedStatement.close();
                if (connection1 != null)
                    connection1.close();
            } catch (Exception ex) {
                ex.printStackTrace();
            }
        }
    }
}
