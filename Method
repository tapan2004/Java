package Java.Methods;

public class Methods_ex {
    static String[] ingredients;
    static boolean sandwichReady;

    public static void gatherIngredients() {
        ingredients = new String[4];
        ingredients[0] = "bread";
        ingredients[1] = "chicken slices";
        ingredients[2] = "cheese slices";
        ingredients[3] = "Motton";
        System.out.println("All ingredients arranged");
    }

    public static void assembleSandwitch() {
        if (ingredients.length == 4) {
            if (ingredients[0].equals("bread") && ingredients[1].equals("chicken slices")
                    && ingredients[2].equals("cheese slices") && ingredients[3].equals("Motton")) {
                System.out.println("Assembling the sandwich...");
                sandwichReady = true;
            } else {
                System.out.println("Opps: missing requirements.");
            }
        }
    }
        public static void serveSandwitch () {
            if (sandwichReady) {
                System.out.println("ready to serve sandwich");
            } else {
                System.out.println("It's take time please wait!");
            }
        }
        public static void main (String[]args){
        gatherIngredients();
        assembleSandwitch();
        serveSandwitch();
        }
    }

